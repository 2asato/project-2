<!DOCTYPE html>
<html>
  <head>
    <head>
        <% include ../partials/head.ejs %>
    </head>
  </head>
  <body>
      <nav>
          <% include ../partials/nav.ejs %>
      </nav>
      <header>
          <h1><%= crew.name %></h1>
      </header>
      <main>
          <section>
              <ul>
                  <li>
                      <img src="<%= crew.profile_pic %>" height="300" width="300"/>
                  </li>
                  <li>
                      <h3>Favorite Beer:</h3>
                       <%= crew.fav_beer %>
                  </li>
                  <li>
                      <h3>Favorite Brewery:</h3>
                       <%= crew.fav_brewery %>
                  </li>
                  <li>
                    <h3>About Me:</h3>
                     <%= crew.about %>
                  </li>
              </ul>
          </section>
          <section>
              <h2>Breweries Posted:</h2>
                  <ul>
                      <% for (let i = 0; i < crew.breweries.length; i++) { %>
                        <li>
                            <a href="/breweries/<%= crew.breweries[i]._id %>"><%= crew.breweries[i].name %></a>
                        </li>
                      <% } %>
                  </ul>
                  <a href="/breweries/new">Add a Brewery</a>
          </section>
          <section>
              <a href="/crew/<%= crew._id %>/edit">Edit Profile</a>
          </section>
          <section>
              <form action="/crew/<%= crew._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete Profile"/>
              </form>
          </section>
      </main>
  </body>
</html>
